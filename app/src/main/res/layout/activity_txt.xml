<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlack"
    tools:context=".txt">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="550dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/txtnews" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Tomorrow X Together wrap up trilogy album series The Dream Chapter: Eternity
"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/merriweather_sans_italic"
                android:text="The K-pop group’s comeback The Dream Chapter: ETERNITY will be the finale to their Dream Chapter album series.\n\n\n\n It follows their debut The Dream Chapter STAR: and the follow up The Dream Chapter: MAGIC.\n\n The album will follow the experiences of members Soobin, Yeonjun, Beomgyu, Taehyun and Hueningkai as they grow up.
The Dream Chapter: ETERNITY comes out 18 May.\n\n The five-member group debuted under Big Hit Entertainment in March 2019 and went on to score a nomination at the MTV VMAs the same year in the best K-pop category.

"
                android:textColor="#FFFFFF"
                android:textSize="18sp">
                "
                android:textColor="#FFFFFF"
                android:textSize="18sp" /></TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/txt1"></ImageView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:fontFamily="@font/merriweather_sans_italic"
                android:text="TXT drop comeback MV 9 and three quarters (Run Away) as they release first studio album
TXT have dropped their first ever comeback MV, and we are totally into it.
The music video for new single 9 and three quarters (Run Away) has been released, and it sees Yeonjun, Beomgyu, Taehyun, Soobin and Hueningkai in a school setting and stealing out hearts.\n\n
The ambitious and whimsical video sees the boys setting fire to the pages of a book and jumping into a swimming pool, before finding a secret garden beneath a trap door.\n
”
"

                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:rotationX="0"
                android:src="@drawable/txt3">

            </ImageView>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>