<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlack"
    tools:context=".lilnas">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="409dp"
        android:layout_height="245dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lilnasnews" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Lil Nas X shuts down Pastor Troy's homophobic attack with hilarious response"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/merriweather_sans_italic"
                android:text="Rapper Pastor Troy shared a post on Instagram of Lil Nas X wearing another of his signature neon cowboy outfits, which included a homophobic caption about the “agenda to take the masculinity from Men, Black Men Especially.”
\n\nHe also included an anecdote about how it “brought joy to my heart” after he his son said “f**k Applebee’s”, an American chain restaurant, after they saw a gay couple on a date there eating mozzarella sticks.

The post, which was hashtagged #notmysons and #wontbeonmypagelong, was eventually taken down but not before clocking up over 4k likes and 1.6k comments.\n\n\n\n "
                android:textColor="#FFFFFF"
                android:textSize="18sp">
                "
                android:textColor="#FFFFFF"
                android:textSize="18sp" /></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="385dp"
                android:src="@drawable/lilnas1"></ImageView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:fontFamily="@font/merriweather_sans_italic"
                android:text="Screenshots of the post eventually reached Lil Nas X on Twitter, who responded. Without addressing the rapper directly, he instead focused on the photo included and tweeted, “damn i look good in that pic on god.”

Lil Nas X, a past master at creating viral social media content, also shared an hilarious video of a woman slapping a table shouting “not on my watch.”\n\n\n\n\n

He captioned the video, “pastor troy when he saw 2 n****s eating mozerella sticks.”"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="408dp"
                android:rotationX="0"
                android:src="@drawable/lilnas2">

            </ImageView>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>